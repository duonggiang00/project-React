{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [

    {
      "src": "/assets/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      },
      "continue": true
    },

    {
      "src": "/api/db.json",
      "dest": "/db.json",
      "headers": {
        "Content-Type": "application/json"
      }
    },

    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}